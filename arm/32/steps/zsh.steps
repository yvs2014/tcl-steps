:

set -e

NAME="zsh"
VERSION="5.9"
TCZ="$NAME.tcz"
DST="dest.$NAME"
FULLNAME="$NAME-$VERSION"
ARCHIVE="$FULLNAME.tar.xz"
LOCATION="ftp://ftp.$NAME.org/$NAME"

tce-load -wil compiletc wget ncurses-dev squashfs-tools

cd /tmp
wget "$LOCATION/$ARCHIVE"
tar xvJf "$ARCHIVE"
cd "$FULLNAME"
./configure
make
sudo make DESTDIR="/tmp/$DST" install
cd ..
mksquashfs "$DST" "$TCZ" -xattrs
echo ncurses.tcz >"$TCZ.dep"

