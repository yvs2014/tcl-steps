:

set -e

NAME="mtr085"
TCZ="$NAME.tcz"
DST="dest.$NAME"

tce-load -wil git
tce-load -wil compiletc
tce-load -wil autoconf
tce-load -wil automake
tce-load -wil libcap
tce-load -wil ncurses
tce-load -wil ncurses-dev
tce-load -wil squashfs-tools

cd /tmp
git clone "https://github.com/yvs2014/$NAME" #--depth=1
cd "$NAME"
autoreconf -fi
./configure --disable-ipv6
make
sudo make DESTDIR="/tmp/$DST" install
cd ..
mksquashfs "$DST" "$TCZ" -xattrs
echo ncurses.tcz >"$TCZ.dep"

